from tkinter import *
from tkinter import messagebox



W1 = Tk()
W1.title("XO")
W1.geometry("500x500")
p1_box = []
p2_box = []


def winner():

    if 1 in p1_box and 2 in p1_box and 3 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 4 in p1_box and 5 in p1_box and 6 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 7 in p1_box and 8 in p1_box and 9 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 1 in p1_box and 4 in p1_box and 7 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 2 in p1_box and 5 in p1_box and 8 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 3 in p1_box and 6 in p1_box and 9 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 1 in p1_box and 5 in p1_box and 9 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()

    if 3 in p1_box and 5 in p1_box and 7 in p1_box:
        messagebox.showinfo("THE WINNER IS X", "THE WINNER IS PLAYER 1 (X)")
        exit()


    if 1 in p2_box and 2 in p2_box and 3 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 4 in p2_box and 5 in p2_box and 6 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 7 in p2_box and 8 in p2_box and 9 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 1 in p2_box and 4 in p2_box and 7 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 2 in p2_box and 5 in p2_box and 8 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 3 in p2_box and 6 in p2_box and 9 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 1 in p2_box and 5 in p2_box and 9 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

    if 3 in p2_box and 5 in p2_box and 7 in p2_box:
        messagebox.showinfo("THE WINNER IS O", "THE WINNER IS PLAYER 2 (O)")
        exit()

        if winner() == False:
            messagebox.showinfo("TIE")
            exit()






def clickme1():

    a = lblplayer.cget("text")
    if a == "player1" :
        button1.config(text="X")
        button1.config(stat=DISABLED)
        button1.config(bg="yellow")
        p1_box.append(1)
        a="player2"
        lblplayer.config(text= a)
        winner()
    else:
        button1.config(text="O")
        button1.config(stat=DISABLED)
        button1.config(bg="white")
        p2_box.append(1)
        a="player1"
        lblplayer.config(text=a)
        print(p2_box)
        winner()

