button1 = Button(text="",padx=40,pady=20,command=clickme1 )
button2 = Button(text="",padx=40,pady=20,command=clickme2 )
button3 = Button(text="",padx=40,pady=20,command=clickme3)

button4 = Button(text="",padx=40,pady=20,command=clickme4)
button5 = Button(text="",padx=40,pady=20,command=clickme5)
button6 = Button(text="",padx=40,pady=20,command=clickme6)

button7 = Button(text="",padx=40,pady=20,command=clickme7)
button8 = Button(text="",padx=40,pady=20,command=clickme8)
button9 = Button(text="",padx=40,pady=20,command=clickme9)



theTitle = Label(text="")
lblplayer = Label(text="player1")


theTitle.grid(row=0,column=1)
lblplayer.grid(row=1,column=1)

button1.grid(row=2,column=0,padx=40,pady=20)
button2.grid(row=2,column=1,padx=40,pady=20)
button3.grid(row=2,column=2,padx=40,pady=20)

button4.grid(row=3,column=0,padx=40,pady=20)
